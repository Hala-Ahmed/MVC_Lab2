    @model List<Project>

@{
    int i = 0;
}

 <a class="btn mp-2 btn-success" href="/project/getaddform">Add</a> 

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Loction</th>
            <th scope="col">City</th>
            <th scope="col">Department</th>
            <th scope="col">Handle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++i)</th>
                <td>@item.Pname</td>
                <td>@item.Plocation</td>
                <td>@item.City</td>
                <td>@item.Department?.Dname</td>
                 <td>
                    <a href="/project/details/@item.Pnumber">Details</a> |
                    <a href="/project/GetEditForm/@item.Pnumber">Edit</a> |
                    <a href="/project/delete/@item.Pnumber">Delete</a> |
                   
                </td> 
            </tr>
        }
    </tbody>
</table>

