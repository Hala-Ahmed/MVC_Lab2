@{
}
@model EmployeeVM
<form asp-action="Add" asp-controller="validation" method="post">
    
    <div>
        <label asp-for="Fname" class="form-label"></label>
        <input asp-for="Fname" class="form-control" />
    </div>
    <div>
        <label asp-for="Lname" class="form-label"></label>
        <input asp-for="Lname" class="form-control" />

    </div>   
     
    <div>
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>   
    <div>
        <label asp-for="Salary" class="form-label"></label>
        <input asp-for="Salary" class="form-control" />

    </div>
    <div>
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div>
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />

    </div>
   
    <div>
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />

    </div> 
    <div>
        <label asp-for="Dno" class="form-label">Department</label>
        <select asp-for="Dno" asp-items="ViewBag.departmnts" class="form-control"></select>
        <span asp-validation-for="Dno" class="text-danger"></span>

    </div>
    <input type="submit" class="btn btn-success mt-2"  value="Add"/>

</form>
